# Custom script for lint-staged

# Run lint-staged in web-vue
cd web-vue
npx lint-staged
if [ $? -ne 0 ]; then
  echo "Erro no lint do frontend"
  exit 1
fi

# Return to root
cd ..

# Run lint-staged in api-nestjs
cd api-nestjs
npx lint-staged
if [ $? -ne 0 ]; then
  echo "Erro no lint do backend"
  exit 1
fi

# Run build in api-nestjs
npm run build
if [ $? -ne 0 ]; then
  echo "Erro no build do backend"
  exit 1
fi

# Adiciona a pasta dist ao commit, se necess√°rio
git add dist

# Return to root
cd ..